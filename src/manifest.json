{
    "manifest_version": 3,
    "name": "Chrome PIP",
    "description": "Activate Picture-in-Picture",
    "version": "2022.01.25",
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "action": {
        "default_title": "Activate Picture-in-Picture"
    },
    "background": {
        "service_worker": "service_worker.js"
    },
    "icons": {
        "1024": "/icons/1024.png",
        "512": "/icons/512.png",
        "128": "/icons/128.png",
        "48": "/icons/48.png",
        "32": "/icons/32.png",
        "16": "/icons/16.png"
    }
}
